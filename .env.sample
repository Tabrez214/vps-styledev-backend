# Database
MONGODB_URI=mongodb://localhost:27017/styledev

# JWT Secret - CRITICAL: Generate with: openssl rand -base64 64
# This should be a long, random, cryptographically secure string
JWT_SECRET=your_strong_random_jwt_secret_here_minimum_32_characters

# Email Configuration (Required for design studio emails)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-password

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Base URL for file serving
BASE_URL=http://localhost:3001

# Razorpay (if using payment features)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret